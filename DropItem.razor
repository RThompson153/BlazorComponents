@if (Item != null)
{
	<div class="draggable-item" draggable="@(IsDraggable.ToString().ToLower())" @ondragstart="onDragStart">
		<h3>@Item.Title</h3>
	</div>
}

@code {
	[Parameter]
	public DraggableItem Item { get; set; }
	[Parameter]
	public bool IsDraggable { get; set; }
	[Parameter]
	public EventCallback<DraggableItem> OnDragStart { get; set; }

	private void onDragStart()
	{
		Service.SetCurrentItem(Item);

		OnDragStart.InvokeAsync();
	}
}
